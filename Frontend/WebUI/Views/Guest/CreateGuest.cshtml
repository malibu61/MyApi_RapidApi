@model WebUI.Dtos.GuestDto.CreateGuestDto

@{
    ViewData["Title"] = "CreateGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Misafir Adı</label>
    <input type="text" asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <br />
    <label>Misafir Soyadı</label>
    <input type="text" asp-for="Surname" class="form-control" />
    <span asp-validation-for="Surname" class="text-danger"></span>
    <br />
    <label>Misafir Şehir</label>
    <input type="text" asp-for="City" class="form-control" />
    @*<span asp-validation-for="City" class="text-danger"></span>
    @Html.ValidationMessageFor(x => x.City, "", new { @style = "color:yellow" }) *@
    <span asp-validation-for="City" class="text-danger"></span>

    <br />
    <button class="btn btn-primary">Misafiri Ekle</button>
</form>



<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
